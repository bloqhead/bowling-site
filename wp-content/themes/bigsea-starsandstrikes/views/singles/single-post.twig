{% extends "base.twig" %}

{% block masthead %}
  <section class="hero hero--large hero--has-gradient"{% if post.get_thumbnail %} style="background-image:url('{{ fn('bsd_getImage', post.get_field('masthead'), 'page-masthead', post.thumbnail) }}');"{% endif %}>
    <div class="hero__inner">
      <h1 class="hero__big-title">{{post.title}}</h1>
    </div>
  </section> <!-- .hero -->
{% endblock %}

{% block content %}
	<article class="post post-{{post.post_type}}" id="post-{{post.ID}}">
		<div class="post__content">
      <p class="post__meta">
        {{ fn('bsd_posted_on', post) }}
      </p>
			{{post.content}}
		</div>
		<footer class="post__footer">
			{{ fn('bsd_entry_footer') }}
		</footer>
	</article>

	{# include  "partials/comments.twig" #}

{% endblock %}

{% block aftercontent %}
	{{ fn('big_sea_related_posts') }}
{% endblock %}

{% block sidebar %}
	{% include  "partials/sidebar.twig" %}
{% endblock %}
