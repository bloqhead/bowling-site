{% extends "base.twig" %}

{% block masthead %}
  <section class="hero hero--large hero--has-gradient"{% if post.get_thumbnail %} style="background-image:url('{{ fn('bsd_getImage', post.get_field('masthead'), 'page-masthead', post.thumbnail) }}');"{% endif %}>
    <div class="hero__inner">
      <h1 class="hero__big-title">{{post.title}}</h1>
    </div>
  </section> <!-- .hero -->
{% endblock %}

{% block content %}

<section class="media daily-specials" id="section-specials">
  <div class="media__inner">

    <div class="page-section__content">
      {{ post.content }}
    </div>

    <header class="media__header media__header--fancy">
      <h2>Daily Specials <span class="desktop-only">at {{ currentLocation.name }}</span></h2>
    </header> <!-- .media__header -->

    <div class="media__content">
      {% include "partials/list-daily-specials.twig" with { 'locationName' : currentLocation.name } %}
    </div> <!-- .media__content -->

  </div>
</section> <!-- .media .daily-specials -->

<section class="media featured-items" id="section-featured">
  <div class="media__inner">

    <header class="media__header media__header--fancy">
      <h2>Featured <span class="desktop-only">at Stars and Strikes</span></h2>
    </header> <!-- .media__header -->

    <div class="media__content">
      {% include "partials/list-featured-promotions.twig" with { 'locationName' : currentLocation.name } %}
    </div> <!-- .media__content -->

  </div>
</section> <!-- .media .featured-items -->

{% endblock %}
